#!/usr/bin/env sh

MAX_TRIES=10

generate_tags() {
  git ls-files | ctags -L - -f .tags >/dev/null 2>&1
  rm .tags.lock
}

acquire_lock() {
  i=0
  while [ $i -lt $MAX_TRIES -a -f .tags.lock ]; do
    sleep 1
    let i=i+1
  done

  if [ $i -eq $MAX_TRIES ]; then
    echo "Couldn't acquire .tags.lock"
    exit 1
  fi

  touch .tags.lock
}

main() {
  acquire_lock
  generate_tags
}

main &
